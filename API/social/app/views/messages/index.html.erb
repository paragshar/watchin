<h1>My Messages</h1>
<p>
	Find me in app/views/messages/index.html.erb
</p>
<h3><%= link_to_unless_current 'Add New Message', new_message_path %></h3>
<table width="100%" border="1">
	<th>Id</th>
	<th>Message</th>
	<th>User</th>
	<th>Channel</th>
	<th>Programme</th>
	<th>View Option</th>
	<th>Status</th>
	<th>Created</th>
	<th>Updated</th>
	<th>Action</th>
	<% @messages.each do |message| %>
	<tr>
		<td><%= message.id %></td>
		<td><%= message.message %></td>
		<td><%= message.user.name %></td>
		<td><%= message.channel.name %></td>
		<td><%= message.programme.name %></td>
		<td><%= message.view_ability %></td>
		<td><% if message.status %>
			Active
			<% else %>
			Block
			<% end %>
		</td>
		<td><%= time_ago_in_words(message.created_at) %></td>
		<td><%= time_ago_in_words(message.updated_at) %></td>
		<td>(<%= link_to "Friend Messages", friends_programme_path(message.programme_id) %>) | (<%= link_to "remove", message, :method => :delete %>) | (<%= link_to "Edit", edit_message_path(message) %>) | (<%= link_to "View", message_path(message) %>)</td>
	</tr>
	<% end %>
</table>
